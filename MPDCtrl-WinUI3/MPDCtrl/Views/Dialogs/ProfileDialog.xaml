                <StackPanel Spacing="3" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBox x:Name="TextBoxHost" x:Uid="ConnectionSettings_Host" Text="localhost" TextChanged="TextBoxHost_TextChanged" PlaceholderText="InitialSetupWindow_Watermark_IPAddressOrServerName" Width="280"></TextBox>
                    <!--  (127.0.0.1 or localhost for Local PC) -->
                    <Viewbox x:Name="IconHostOK" Width="12" Height="12" Margin="12,24,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
