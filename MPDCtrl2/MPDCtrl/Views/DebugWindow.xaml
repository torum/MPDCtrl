<Window  x:Class="MPDCtrl.Views.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPDCtrl.Views"
        mc:Ignorable="d"
        
        Background="{DynamicResource WindowBackgroundBaseColorBrush}"

        Title="Debug Window" Height="240" Width="450"
         DataContext="{StaticResource DebugViewModel}"
        Closing="DebugWindow_Closing">
    <Grid>
        <TextBox x:Name="DebugTextBox" Text="{Binding DebugText, Mode=OneWay}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="NoWrap" IsReadOnly="True" IsTabStop="False" Margin="0" MinHeight="24" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextChanged="DebugTextBox_TextChanged" Style="{StaticResource DefaultTextBoxStyle}">
        </TextBox>
    </Grid>
</Window>
